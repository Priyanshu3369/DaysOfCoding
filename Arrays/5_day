# ðŸ“… Day 5: Minimum Difference in Chocolate Distribution

class Solution {
  public:
    int findMinDiff(vector<int>& a, int m) {
        sort(a.begin(),a.end());
        int minDiff = INT_MAX;
        for(int i = 0;i+m-1<a.size();i++){
            int diff = a[i+m-1] - a[i];
            if(diff<minDiff)    minDiff = diff;
        }
        return minDiff;
    }
};
