# ðŸ“… Day 7: Best Time to Buy and Sell Stock

class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int maxPrice = 0;
        int mini = prices[0];
        for(int i = 0;i<prices.size();i++){
            int currProfit = prices[i] - mini;
            maxPrice = max(maxPrice,currProfit);
            mini = min(mini,prices[i]);
        }
        return maxPrice;
    }
};
